generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Roster {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  playerIds String[] @db.ObjectId
  players   Player[] @relation(fields: [playerIds], references: [id])
}

model Player {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nbaId        String
  name         String
  age          Int
  team         String
  height       String
  weight       String
  position     String
  country      String
  lastAttended String
  fantasyPpg   Float
  ppg          Float
  apg          Float
  rpg          Float
  spg          Float
  bpg          Float
  tpg          Float
  mpg          Float
  fgPct        Float
  fg3Pct       Float
  ftPct        Float
  jersey       String
  rosterIds    String[] @db.ObjectId
  rosters      Roster[] @relation(fields: [rosterIds], references: [id])
}
